<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/edit_text"
    android:layout_margin="5dp"
    android:layout_height="210dp">

    <ImageView
        android:id="@+id/adsPhoto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/empty_profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linLayoutAuthor"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/adsPhoto"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewSellerPhoto"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/textViewSellerName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:text="Имя Фамилия"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linLayoutButtons"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linLayoutAuthor"
        app:layout_constraintTop_toBottomOf="@+id/linLayoutAuthor"
        app:layout_goneMarginStart="0dp">

        <Button
            android:id="@+id/buttonConnect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:text="@string/contact"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/adsPhoto"
        tools:layout_editor_absoluteX="6dp">

        <Button
            android:id="@+id/buttonAccept"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:background="@drawable/rounded_button"
            android:text="@string/accept"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonDecline"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="3dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_button_red"
            android:backgroundTint="#C43737"
            android:text="@string/decline"
            android:textSize="15sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>