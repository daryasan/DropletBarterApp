<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="230dp"
    android:layout_margin="5dp"
    android:background="@drawable/advertisements">

    <ImageButton
        android:id="@+id/buttonFavourites"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/favourites_false" />

    <ImageView
        android:id="@+id/imageViewAds"
        android:layout_width="170dp"
        android:layout_height="175dp"
        android:layout_marginTop="-5dp"
        android:layout_marginStart="-5dp"
        android:layout_marginEnd="-5dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/textViewAdsName"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageViewAds"
        android:gravity="center"
        android:padding="0dp"
        android:text="@string/advertisementsName"
        android:textColor="@color/black"
        android:textSize="18sp" />

</RelativeLayout>

